{
  "info": {
    "name": "Job Portal Backend API",
    "description": "Postman collection to test Job Application Portal backend APIs (Auth, Jobs, Resume Upload, Applications, Rate Limiting)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "jobId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"testuser@test.com\",\n  \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"testuser@test.com\",\n  \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const res = pm.response.json();",
                  "pm.environment.set('token', res.token);"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Jobs",
      "item": [
        {
          "name": "Get All Jobs",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/jobs",
              "host": ["{{base_url}}"],
              "path": ["jobs"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const jobs = pm.response.json();",
                  "if (jobs.length > 0) {",
                  "  pm.environment.set('jobId', jobs[0]._id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Job By ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/jobs/{{jobId}}",
              "host": ["{{base_url}}"],
              "path": ["jobs", "{{jobId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "User",
      "item": [
        {
          "name": "Upload Resume",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "resume",
                  "type": "file",
                  "src": ""
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/users/upload-resume",
              "host": ["{{base_url}}"],
              "path": ["users", "upload-resume"]
            }
          }
        }
      ]
    },
    {
      "name": "Applications",
      "item": [
        {
          "name": "Apply For Job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"jobId\": \"{{jobId}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/applications/apply",
              "host": ["{{base_url}}"],
              "path": ["applications", "apply"]
            }
          }
        },
        {
          "name": "View My Applications",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/applications/my",
              "host": ["{{base_url}}"],
              "path": ["applications", "my"]
            }
          }
        }
      ]
    },
    {
      "name": "Rate Limit Test",
      "item": [
        {
          "name": "Hit Rate Limit",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/jobs",
              "host": ["{{base_url}}"],
              "path": ["jobs"]
            }
          }
        }
      ]
    }
  ]
}
